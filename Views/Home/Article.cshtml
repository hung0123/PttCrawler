
@{
    ViewBag.Title = "Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
    int j = 0;
}


<title>@Model.Title</title>
<div class="container">
    <div>
        <div>
            標題:<span>@Model.Title</span>
        </div>
        <div>
            作者:<span>@Model.Author</span>
        </div>
        <div>
            發文時間:<span>@Model.ContentDateTime</span>
        </div>
      
        <pre style="white-space: pre-wrap;">
        @Model.MainContent
        </pre>
       
        @foreach (string l in Model.Link)
        {
            <a href="@l" target="_blank">@l</a>
            <br />
        }

    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="style=" @(Model.Imglink.Count > 0 ? "display:block" : "display:none") "">
        <ol class="carousel-indicators">
            @foreach (string link in Model.Imglink)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
                i++;
            }

        </ol>
        <div class="carousel-inner">
            @foreach (string link in Model.Imglink)
            {
                if (j == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@link">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@link">
                    </div>
                }
                j++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>





